{% extends "base.twig" %}

{% block title %}<h1 class="article-h1">{{post.title}}</h1>{% endblock %}

{% block content %}
	<div class="content-wrapper">
		<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
			<section class="article-content">
				{% if (post.get_thumbnail == '' and function("is_front_page") != true)  %}
					<h1 class="article-h1">{{post.title}}</h1>
				{% endif %}
				<div class="article-body">
					{{post.content}}
				</div>
			</section>
		</article>
	</div><!-- /content-wrapper -->
{% endblock %}